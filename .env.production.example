# Production environment variables for custom domain deployment
# Copy this to .env.production or set in GitHub Actions

# Site URL - SET THIS TO YOUR CUSTOM DOMAIN
NEXT_PUBLIC_SITE_URL=https://scholarscanner.com

# API Configuration - Update with your backend URL
NEXT_PUBLIC_API_URL=https://your-backend.com/api
NEXT_PUBLIC_BASE_URL=https://your-backend.com

# Authentication Settings
NEXT_PUBLIC_JWT_EXPIRY=3600

# Google OAuth Settings - Update redirect URI for production
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your-production-client-id
NEXT_PUBLIC_GOOGLE_OAUTH_REDIRECT_URI=https://scholarscanner.com/Authentication/google-callback
